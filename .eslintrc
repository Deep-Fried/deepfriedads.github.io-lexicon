{
  "env": {
    "es6": true,
    "browser": true,
    "jquery": true,
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "arrow-body-style": [ "error", "as-needed" ],
    "indent": [ "error", "tab" ],
    "react/jsx-indent": [ "error", "tab" ],
    "react/jsx-indent-props": [ "error", "tab" ],
    "no-multi-spaces": [ "error", { exceptions: { "VariableDeclarator": true } } ],
    "no-tabs": 0,
    "yoda": [ "error", "always" ],
  }
}
